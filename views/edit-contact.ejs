<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h2>Form Ubah data Contact</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(element => { %>
          <li><%= element.msg %></li>

          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact/update">
        <input
          type="hidden"
          name="oldNama"
          value="<%=(contact.oldNama ? contact.oldNama : contact.nama)%>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="noHp" class="form-label">No HP</label>
          <input
            type="text"
            class="form-control"
            id="noHp"
            name="noHp"
            required
            value="<%= contact.noHp %>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
    </div>
  </div>
</div>
