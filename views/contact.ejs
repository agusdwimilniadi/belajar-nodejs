<div class="mt-3 container">
  <div class="row">
    <div class="col-12">
      <h1>Contact</h1>
      <a href="/contact/add" class="btn btn-primary mb-2"
        >Tambah Data Contact</a
      >

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data contact masih kosong
              </div>
            </td>
          </tr>

          <% } %> <% let num =0 %> <% contacts.forEach((contact, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.noHp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="badge rounded-pill btn-success"
                ><i class="bi bi-info-circle"></i> Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
