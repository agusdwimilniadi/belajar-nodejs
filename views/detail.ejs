<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h2>Detail Contact</h2>

      <% if (!contacts) { %>
      <div class="alert alert-danger" role="alert">
        Data contact tidak ada
        <br />
        <a href="/contact" class="alert-link"
          >&laquo;Kembali ke daftar contact</a
        >.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contacts.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contacts.noHp %></h6>
          <p class="card-text"><%= contacts.email %></p>
          <a
            href="/contact/edit/<%= contacts.nama %> "
            class="btn btn-info badge"
            >Edit
          </a>
          <a
            href="/contact/delete/<%= contacts.nama %> "
            class="btn btn-danger badge"
            onclick="return confirm('Apakah anda yakin?')"
            >Hapus
          </a>
          <a href="/contact" class="card-link d-block mt-3">Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
